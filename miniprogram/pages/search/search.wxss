/* miniprogram/pages/search/search.wxss */

.view-main {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view-input-type {
  width: 90%;
  margin-top: 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  border: 1px solid #3cb371;
  border-radius: 7px;
  background-color: white;
}

.input_type {
  width: 100%;
  display: flex;
  padding-left: 20rpx;
  flex-direction: column;
  align-items: left;
}

.image_search_type {
  /* width: 100rpx; */
  width: 100rpx;
  height: 50rpx;
}

.view_show {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.view_info_title {
  width: 90%;
  color: red;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.view_info_txts {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
}

.view_info_txt {
  margin-right: 15rpx;
  margin-top: 10rpx;
  font-size: 13px;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
  border: 1px solid #3cb371;
  border-radius: 5rpx;
  background-color: white;
}

.view_search_show {
  margin-top: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_search_item {
  margin-top: 5rpx;
  margin-bottom: 2px;
  padding: 5rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  border-radius: 5rpx;
  /* box-shadow: 1.5px 1.5px 1.5px grey; */
}

.text_search_item {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 26rpx;
  width: 90%;
  text-align: left;
  /* color: #3cb371; */
  font-size: 16px;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.view_modal_main {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.button_modal_kind {
  margin-top: 20rpx;
  color: white;
  width: 200rpx;
  height: 200rpx;
  font-size: 13px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image_modal_kind {
  margin-top: 20rpx;
  width: 90%;
  height: 90%;
}

.view_modal_info {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.view_modal_info_title {
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  color: #3cb371;
  font-size: 16px;
  font-weight: bold;
}

.view_modal_info_txt {
  color: black;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
  font-size: 14px;
}
